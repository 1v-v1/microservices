# 极速贷微服务系统 - 生产环境配置模板
# 请复制此文件为 .env.prod 并填入实际配置

# ===========================================
# 数据库配置
# ===========================================
# PostgreSQL数据库密码（请使用强密码）
POSTGRES_PASSWORD=LoanSystem2024!SecurePass

# Redis缓存密码（请使用强密码）
REDIS_PASSWORD=Redis2024!SecurePass

# ===========================================
# JWT配置
# ===========================================
# JWT密钥（请生成32位以上的强密钥）
SECRET_KEY=LoanSystemJWTSecretKey2024!VerySecureKey

# ===========================================
# 邮件服务配置
# ===========================================
# 邮件用户名（如：your_email@example.com）
EMAIL_USERNAME=your_email@example.com

# 邮件密码（应用专用密码，不是登录密码）
EMAIL_PASSWORD=your_email_app_password

# ===========================================
# 短信服务配置（Twilio）
# ===========================================
# Twilio账户SID
TWILIO_ACCOUNT_SID=your_twilio_account_sid

# Twilio认证令牌
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Twilio发送号码（如：+1234567890）
TWILIO_FROM_NUMBER=your_twilio_phone_number

# ===========================================
# 对象存储配置（MinIO）
# ===========================================
# MinIO访问密钥
MINIO_ACCESS_KEY=minioadmin

# MinIO秘密密钥（请使用强密码）
MINIO_SECRET_KEY=minioadmin123456

# ===========================================
# 监控配置
# ===========================================
# Grafana管理员密码
GRAFANA_PASSWORD=Grafana2024!AdminPass

# ===========================================
# 域名配置
# ===========================================
# 您的域名（如：your-domain.com）
DOMAIN=your-domain.com

# ===========================================
# 可选配置
# ===========================================
# 时区设置
TZ=Asia/Shanghai

# 日志级别（DEBUG, INFO, WARNING, ERROR）
LOG_LEVEL=INFO

# 是否启用调试模式（true/false）
DEBUG=false
